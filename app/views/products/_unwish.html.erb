<% if current_wish.class == Wish %>
  <%= form_for(current_wish.wish_items.find_by(product_id: @product.id, variant_id: @variant.id),
               html: { method: :delete },
               remote: true) do |f| %>
    <%= f.submit "Remove from Wishlist", class: "btn btn-danger" %>
  <% end %>
<% else %>
  <%= form_for(current_wish.guest_wish_items.find_by(product_id: @product.id, variant_id: @variant.id),
               html: { method: :delete },
               remote: true) do |f| %>
    <%= f.submit "Remove from Wishlist", class: "btn btn-danger" %>
  <% end %>
<% end %>
