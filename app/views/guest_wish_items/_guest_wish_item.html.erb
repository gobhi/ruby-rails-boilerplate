<li id="guest_wish_item-<%= guest_wish_item.id %>">
  <%= image_tag guest_wish_item.variant.images.first, size: 50, size: "50x50" %>
  <span class="user"><%= link_to guest_wish_item.product.name, guest_wish_item.product %></span>
  <span class="content">
    <%= guest_wish_item.variant.color %>
  </span>
  <span class="timestamp">
    Added <%= time_ago_in_words(guest_wish_item.created_at) %> ago.
    <%= link_to "delete", guest_wish_item_url(guest_wish_item), method: :delete,
                                     data: { confirm: "You sure?" } %>
  </span>
</li>
