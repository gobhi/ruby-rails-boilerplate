<li id="guest_cart_item-<%= guest_cart_item.id %>">
  <%= image_tag guest_cart_item.variant.images.first, size: 50, size: "50x50" %>
  <span class="user"><%= link_to guest_cart_item.product.name, guest_cart_item.product %></span>
  <span class="content">
    <%= guest_cart_item.quantity %>
  </span>
  <span class="timestamp">
    Added <%= time_ago_in_words(guest_cart_item.created_at) %> ago.
    <%= link_to "delete", guest_cart_item_url(guest_cart_item), method: :delete,
                                     data: { confirm: "You sure?" } %>
  </span>
</li>
